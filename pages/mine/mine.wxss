.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
  background-color: white;
}

.user-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}

.user-name{
  margin-top: 20rpx;
  font-size: 30rpx;
}

.order-classify{
margin: 15rpx 0 15rpx 0;
  display: flex;
  flex-direction: row;
}
.order-item{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: white;
}
.order-item-img{
  width: 60rpx;
  height: 60rpx;

}
.order-item-name{
  margin-top: 20rpx;
  font-size: 26rpx
}

.mine-item-list{
  background-color: white;
}

.mine-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid gainsboro;
}

.mine-item-img {
  width: 50rpx;
  height: 50rpx;
  padding: 20rpx 24rpx 20rpx 24rpx;
}

.mine-item-name {
  flex: 1;
}

.mine-item-arrow {
  padding-right: 40rpx;
  width: 30rpx;
  height: 30rpx;
}